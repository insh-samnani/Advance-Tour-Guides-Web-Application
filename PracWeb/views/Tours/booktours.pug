                input(type="number" name="tourid" id="inputdeparture" placeholder="Tour ID" autofocus required)
                br
                label(id="destination") NUMBER OF CHILDREN #[span(id="req") *]
                input(type="number" name="countch" id="inputdestination" placeholder="Children" autofocus required)
                br
                label(id="destination") NUMBER OF ADULTS #[span(id="req") *]
                input(type="number" name="countad" id="inputdestination" placeholder="Adults" autofocus required)
                br
                button(class=button id="button" type="submit") BOOK