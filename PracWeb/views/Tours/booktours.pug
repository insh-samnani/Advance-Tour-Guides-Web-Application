block scripts 
    script(src="../../static/index.js")
block style
    style
        include ../../static/style.css
        include ../../static/Tours/style_booktours.css
block content
    section#flightintro
        div #[h1 WE HAVE PLANNED FOR YOU]
        div.h3class #[h3 Please Have A Sweet Look!!!]
    section#flightsearch
        div#flightform
            div#agenda
        div#flightform1
            h1#flightintroh1 BOOK TOUR NOW
